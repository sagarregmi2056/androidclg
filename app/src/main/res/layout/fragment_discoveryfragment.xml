<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Discoveryfragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backgroundlogo"



        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discovery zone "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="we have been thaught to recycle .Noe its time to  learn to  "
            android:textColor="@color/white"
            android:textSize="14sp"


            android:layout_marginLeft="16dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recycle correctly .Re-learn recycling basics and  "
            android:textColor="@color/white"

            android:textSize="14sp"
            android:layout_marginLeft="16dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="discover which materials are negatively affecting  your  "
            android:textColor="@color/white"

            android:textSize="14sp"
            android:layout_marginLeft="16dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="local recycle programs performance. "
            android:textColor="@color/white"

            android:textSize="14sp"
            android:layout_marginLeft="16dp"

            />





        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            app:cardBackgroundColor="@color/plainYellow"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/image_container"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turning waste into Resources"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"

                        android:textColor="@color/dark"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The importance of Recycling"
                        android:textSize="18sp"
                        android:textColor="@color/dark"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:gravity="center_horizontal"
                        android:text="in sustinable world"
                        android:textSize="18sp"
                        android:textColor="@color/dark"
                        android:layout_marginBottom="2dp"/>


                </LinearLayout>

                <!-- Right half: ImageView -->
                <LinearLayout
                    android:id="@+id/image_container"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/throwingwaste"
                        android:scaleType="fitCenter"/>

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            app:cardBackgroundColor="@color/plainYellow"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/image_container2"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turning waste into Resources"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"

                        android:textColor="@color/dark"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The importance of Recycling"
                        android:textSize="18sp"
                        android:textColor="@color/dark"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:gravity="center_horizontal"
                        android:text="in sustinable world"
                        android:textSize="18sp"
                        android:textColor="@color/dark"
                        android:layout_marginBottom="2dp"/>


                </LinearLayout>

                <!-- Right half: ImageView -->
                <LinearLayout
                    android:id="@+id/image_container2"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/card2"
                        android:scaleType="fitCenter"/>

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            app:cardBackgroundColor="@color/plainYellow"
            app:cardCornerRadius="16dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                

                    <VideoView
                        android:id="@+id/video"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>